{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend of Blipster Project",
  "main": "app.js",
  "scripts": {
    "build:client": "esbuild src/client/public-blog/index.js --bundle --platform=browser --outfile=build/jsBundle.js --loader:.js=jsx",
    "build:server": "esbuild app.js --bundle --platform=node --outfile=build/server.js --loader:.js=jsx",
    "start": "npm run build:server && npm run build:client && nodemon --config nodemon.json build/server.js",
    "start:prod": "NODE_ENV=production nodemon build/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "debug": "ndb app.js"
  },
  "author": "Andrea Benedetto",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.12.0",
    "mongoose": "^8.9.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.24.2",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "ndb": "^1.1.5",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=21.5.0"
  }
}
