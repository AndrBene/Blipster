{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend of Blipster Project",
  "main": "app.js",
  "scripts": {
    "dev:public-blog": "vite",
    "build:css": "tailwindcss -i ./src/style/input.css -o ./src/style/index.css",
    "build:client": "esbuild src/client/public-blog/index.js --bundle --platform=browser --outfile=build/jsBundle.js --loader:.js=jsx --jsx=automatic",
    "build:server": "esbuild app.js --bundle --platform=node --outfile=build/server.js --loader:.js=jsx --jsx=automatic",
    "start": "eslint . && npm run build:css && npm run build:server && npm run build:client && nodemon --config nodemon.json build/server.js",
    "start:prod": "NODE_ENV=production nodemon build/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "debug": "ndb app.js",
    "lint": "eslint ."
  },
  "author": "Andrea Benedetto",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.12.0",
    "mongoose": "^8.9.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.24.2",
    "eslint": "^8.57.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.14.0",
    "ndb": "^1.1.5",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.7"
  },
  "engines": {
    "node": ">=21.5.0"
  }
}
